<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="id"
            type="int" />

        <variable
            name="description"
            type="CharSequence" />

        <variable
            name="videoUrl"
            type="String" />

        <variable
            name="thumbnailUrl"
            type="String" />

        <variable
            name="count"
            type="int" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:padding="8dp"
            tools:context=".view.ViewRecipeFragment">

            <com.google.android.exoplayer2.ui.PlayerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:videoUrl="@{videoUrl}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:gravity="center"
                android:text="@{description}"
                android:textSize="20sp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:imageUrl="@{thumbnailUrl}" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/prev_step"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="@{id == 0 ? false : true}"
                android:text="@string/prev_step" />

            <Button
                android:id="@+id/next_step"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="@{id == count -1 ? false : true}"
                android:text="@string/next_step" />
        </LinearLayout>
    </FrameLayout>
</layout>
